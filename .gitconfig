[user]
	name = Stephen Edgar
	email = stephen@netweb.com.au

[credential]

[grep]
	lineNumber = true
	extendRegexp = true

[alias]
	g = grep --break --heading --line-number
	l = log --abbrev-commit --graph -n 20 --format=format:'%C(green)(%cr) %C(magenta)%h%C(reset) %C(cyan)%d%C(reset) %s %C(yellow)<%an>%C(reset)'
#	    log --abbrev-commit --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%cr)%C(reset) %C(white)%s%C(reset) %C(bold white)- %cn%C(reset)%C(bold yellow)%d%C(reset)'

[core]
	editor = 'C:/Users/Stephen/.sublimetext/sublime_text.exe' -w

[color]
  diff = auto
  status = auto
  branch = auto

[color "diff"]
  whitespace = blue reverse
  meta = white
  frag = yellow
  old = red
  new = green

[color "status"]
  changed = yellow
  added = green
  untracked = red

[color "branch"]
  current = green reverse
  local = green
  remote = blue

