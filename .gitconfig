[grep]
	lineNumber = true
	extendRegexp = true

[alias]
	g = grep --break --heading --line-number
	l = log --abbrev-commit --graph -n 20 --pretty=format:'%Cgreen(%cr) %C(magenta)%h%Creset %C(cyan)%d%Creset %s %C(yellow)<%an>%Creset'

[core]
	editor = 'c:/program files/sublime text 2/sublime_text.exe' -w

